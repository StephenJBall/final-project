CREATE TABLE playerbase (
    id SERIAL PRIMARY KEY,
    name TEXT NOT NULL,
    date_of_birth DATE NOT NULL,
    position TEXT NOT NULL,
    caps INTEGER,
    tries INTEGER,
    injury_status TEXT NOT NULL
);

CREATE TABLE injuryreports (
    id SERIAL PRIMARY KEY,
 	player_id INTEGER NOT NULL,
    injury TEXT NOT NULL,
    expected_return TEXT NOT NULL,
    FOREIGN KEY (player_id) REFERENCES playerbase(id)
);

CREATE TABLE contracts (
    id SERIAL PRIMARY KEY,
    player_id INTEGER NOT NULL,
    duration TEXT NOT NULL,
    type TEXT NOT NULL,
    issuer TEXT NOT NULL,
    FOREIGN KEY (player_id) REFERENCES playerbase(id)
);

CREATE TABLE matchreports (
    id SERIAL PRIMARY KEY,
    opposition TEXT NOT NULL,
    venue TEXT NOT NULL,
    competition TEXT NOT NULL,
    stage TEXT NOT NULL,
    date DATE NOT NULL,
    munster_score INTEGER NOT NULL,
    opposition_score INTEGER NOT NULL
);

CREATE TABLE team (
    id SERIAL PRIMARY KEY,
    match_id INTEGER NOT NULL,
    loosehead_prop TEXT NOT NULL,
    hooker TEXT NOT NULL,
    tighthead_prop TEXT NOT NULL,
    loosehead_lock TEXT NOT NULL,
    tighthead_lock TEXT NOT NULL,
    blindside_flanker TEXT NOT NULL,
    openside_flanker TEXT NOT NULL,
    number_eight TEXT NOT NULL,
    scrum_half TEXT NOT NULL,
    fly_half TEXT NOT NULL,
    left_wing TEXT NOT NULL,
    inside_centre TEXT NOT NULL,
    outside_centre TEXT NOT NULL,
    right_wing TEXT NOT NULL,
    fullback TEXT NOT NULL,
    bench_16 TEXT NOT NULL,
    bench_17 TEXT NOT NULL,
    bench_18 TEXT NOT NULL,
    bench_19 TEXT NOT NULL,
    bench_20 TEXT NOT NULL,
    bench_21 TEXT NOT NULL,
    bench_22 TEXT NOT NULL,
    bench_23 TEXT NOT NULL,
    FOREIGN KEY (match_id) REFERENCES matchreports(id)
);
